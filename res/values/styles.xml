<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
        This resets the popup menu animation style to a shorter one from Gingerbread, aimed to fix
        the following error when screen oration changes while the popup menu is shown:

            E/WindowManager(2048): android.view.WindowLeaked: Activity **.app.ListActivity has
                                   leaked window android.widget.PopupWindow$PopupViewContainer@4157a7e8
                                   that was originally added here

        Ref: https://stackoverflow.com/a/66167797/2569746
    -->
    <style name="PopupMenuDefaultAnimationStyle" parent="@android:style/Widget.Material.PopupMenu">
        <item name="android:popupEnterTransition">@null</item>
        <item name="android:popupExitTransition">@null</item>
        <item name="android:popupAnimationStyle">@null</item>
    </style>

    <style name="FabRoundedStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ScheduleCardViewStyle">
        <item name="android:layout_marginTop">@dimen/schedule_margin_top</item>
        <item name="android:layout_marginStart">16.0dip</item>
        <item name="android:layout_marginEnd">16.0dip</item>
        <item name="elevation">0.0dip</item>
    </style>

    <style name="ScheduleCardTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ScheduleCardDisplayTimeStyle">
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:fontFeatureSettings">tnum</item>
    </style>

    <style name="ScheduleCardDayButtonStyle">
        <item name="android:textSize">@dimen/day_button_font_size</item>
        <item name="android:textColor">@color/day_of_week_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/day_of_week_toggle_circle</item>
        <item name="android:layout_width">@dimen/touch_target_min_size</item>
        <item name="android:layout_height">@dimen/touch_target_min_size</item>
        <item name="android:button">@null</item>
    </style>
</resources>
